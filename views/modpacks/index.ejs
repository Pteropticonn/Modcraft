<%- include ('../partials/header') %>

<div class="container my-5">
  <header>
    <h1>Mod Library</h1>
  </header>

  <hr>

  <div class="content">
    <% for (let modpack of modpacks) { %>
   

        <div class="jumbotron">
          <h1 class="display-4"><%= modpack.title %></h1>
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Future Functionality</a>
          </p>
        </div>
        <div class="card-footer text-muted">
          <a href="/modpacks/<%= modpack.id %>/edit"><i class="fa fa-edit">&nbsp;</i>Change details on mods comprising pack</a>
          <br>
          <form class="form-inline" action="/modpacks/delete" method="post" onsubmit="return confirm('Remove modpack from your library?');">
            <input type="hidden" value="<%= modpack.id %>" name="id">
            <button class="delete" type="submit">
              <i class="fa fa-trash">&nbsp;</i>
              Remove modpack
            </button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include ('../partials/footer') %>
