<%- include ('../partials/header') %>

<div class="container my-5">
  <div class="jumbotron">
    <h1 class="display-4"><%= mod.title %></h1>
    <p class="lead">Description: <%= mod.description %>.</p>
    <hr class="my-4">
    <p>Current Version: <%= mod.version %></p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="#" role="button">Version Control w/ feature comparison via changelog coming soon</a>
    </p>
    <hr class="my-4">
    <a href="/mods/<%= mod.id %>/edit"><i class="fa fa-edit">&nbsp;</i>Change your mod</a>
    <br>
    <form class="form-inline" action="/mods/delete" method="post" onsubmit="return confirm('Are you sure you want to cancel your mod?');">
      <input type="hidden" value="<%= mod.id %>" name="id">
      <button class="delete" type="submit">
        <i class="fa fa-trash">&nbsp;</i>
        Cancel your mod
      </button>
    </form>
  </div>
</div>

<%- include ('../partials/footer') %>
