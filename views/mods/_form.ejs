<form action="<%= (typeof actionPath === 'undefined') ? '/mods' : actionPath %>", method="POST">
    <% if (typeof actionPath !== 'undefined') { %>
      <input type="hidden" name="id" value="<%= formData.id %>">
    <% } %>
  
    <% const mods = ["Botania", "Biomes o' plenty", "Industrial Engineering", "Animania", "JEI"] %>
    <div class="form-group">
      <label for="title">Mod name</label>
        <input type="string" name="title" class="form-control" value="<%= formData.title %>">
    </div>

    <div class="form-group">
        <label for="version">Version</label>
          <input type="string" name="version" class="form-control" value="<%= formData.version %>">
      </div>
  
      <div>
        <label for="zdescription">Description</label>
          <textarea name="description" cols="30" rows="10" value="<%= formData.description %>" class="border rounded-lg"></textarea>
      </div>
    <div class="form-group">
      <button class="btn btn-dark">Submit</button>
    </div>
  </form>
  